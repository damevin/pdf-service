{
  "name": "@france-atelier/template-backend-fastify",
  "version": "1.0.0",
  "description": "Skeleton project for a Fastify API backend.",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc && tsc-alias -f -p tsconfig.json",
    "format": "npm run lint:format -- --write",
    "lint:ci": "cross-env ESLINT_CODE_QUALITY_REPORT=gl-codequality.json eslint --format gitlab --ext .ts,.json .",
    "lint:eslint": "eslint --ext .ts,.json .",
    "lint:format": "prettier --check --ignore-path .gitignore \"**/*.+(ts|json)\"",
    "start": "node build/src/server.js",
    "test": "c8 mocha src/routes/**/*.spec.ts test/unit/**/*.spec.ts",
    "watch": "ts-node-dev --respawn --rs --debounce 1000 -r tsconfig-paths/register --ignore-watch node_modules --transpile-only src/server.ts"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/france-atelier/api-v3/issues"
  },
  "homepage": "https://gitlab.com/france-atelier/api-v3#readme",
  "devDependencies": {
    "@france-atelier/eslint-config-backend": "^1.3.1",
    "@types/faker": "^5.5.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.3",
    "@typescript-eslint/parser": "^5.1.0",
    "c8": "^7.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-formatter-gitlab": "^3.0.0",
    "faker": "^5.5.3",
    "fishery": "^2.1.0",
    "json-schema-to-ts": "^1.6.4",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-multi-reporters": "^1.5.1",
    "pino-pretty": "^7.1.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.3.10",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "envalid": "^7.2.1",
    "fastify": "^3.22.0",
    "fastify-cors": "^6.0.2",
    "fastify-error": "^0.3.1",
    "fastify-formbody": "^5.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-metrics": "^8.0.0",
    "fastify-multer": "^2.0.2",
    "fastify-now": "^2.4.0",
    "fastify-rate-limit": "^5.6.2",
    "fastify-sensible": "^3.1.1",
    "fastify-swagger": "^4.12.4",
    "http-graceful-shutdown": "^3.1.4",
    "is-docker": "^2.2.1",
    "under-pressure": "^5.8.0"
  }
}
