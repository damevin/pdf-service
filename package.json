{
  "name": "@france-atelier/template-backend-fastify",
  "version": "1.0.0",
  "description": "Skeleton project for a Fastify API backend.",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc && tsc-alias -f -p tsconfig.json",
    "format": "npm run lint:format -- --write",
    "lint:ci": "eslint --format gitlab --ext .ts,.json .",
    "lint:eslint": "eslint --ext .ts,.json .",
    "lint:format": "prettier --check --ignore-path .gitignore \"**/*.+(ts|json)\"",
    "start": "node build/src/server.js",
    "test": "mocha src/routes/**/*.spec.ts test/unit/**/*.spec.ts",
    "test:ci": "c8 npm test",
    "watch": "ts-node-dev --respawn --rs --debounce 1000 -r tsconfig-paths/register --ignore-watch node_modules --transpile-only src/server.ts"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/france-atelier/api-v3/issues"
  },
  "homepage": "https://gitlab.com/france-atelier/api-v3#readme",
  "config": {
    "mongodbMemoryServer": {
      "version": "4.2.15"
    }
  },
  "devDependencies": {
    "@france-atelier/eslint-config-backend": "^1.2.0",
    "@types/factory-girl": "^5.0.8",
    "@types/faker": "^5.5.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.14",
    "@typescript-eslint/parser": "^4.30.0",
    "c8": "^7.8.0",
    "eslint": "^7.32.0",
    "eslint-formatter-gitlab": "^2.2.0",
    "factory-girl": "^5.0.4",
    "faker": "^5.5.3",
    "json-schema-to-ts": "^1.6.4",
    "mocha": "^9.1.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "mongodb-memory-server-core": "7.3.x",
    "pino-pretty": "^6.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsc-alias": "^1.3.9",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "envalid": "^7.2.1",
    "fastify": "^3.20.2",
    "fastify-cors": "^6.0.2",
    "fastify-error": "^0.3.1",
    "fastify-formbody": "^5.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-metrics": "^7.2.3",
    "fastify-multer": "^2.0.2",
    "fastify-now": "^2.4.0",
    "fastify-rate-limit": "^5.6.2",
    "fastify-sensible": "^3.1.1",
    "fastify-swagger": "^4.9.1",
    "http-graceful-shutdown": "^3.1.4",
    "is-docker": "^2.2.1",
    "mongoose": "^6.0.4",
    "under-pressure": "^5.7.0"
  }
}
